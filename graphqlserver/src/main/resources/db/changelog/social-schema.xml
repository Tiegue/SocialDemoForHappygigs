<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
       http://www.liquibase.org/xml/ns/dbchangelog
       http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <changeSet id="1-social-user" author="tiegue">
        <createTable tableName="social_user">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="username" type="VARCHAR(100)">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(150)">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="last_seen" type="TIMESTAMP"/>
            <column name="status" type="VARCHAR(50)"/>
        </createTable>
    </changeSet>

    <changeSet id="2-venue-location" author="tiegue">
        <createTable tableName="venue_location">
            <column name="id" type="UUID">
                <constraints primaryKey="true"/>
            </column>
            <column name="venue_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="latitude" type="DOUBLE PRECISION"/>
            <column name="longitude" type="DOUBLE PRECISION"/>
            <column name="radius_meters" type="INTEGER" defaultValueNumeric="20"/>
        </createTable>
    </changeSet>

    <changeSet id="3-user-location-event" author="tiegue">
        <createTable tableName="user_location_event">
            <column name="id" type="UUID">
                <constraints primaryKey="true"/>
            </column>
            <column name="user_id" type="UUID"/>
            <column name="venue_id" type="UUID"/>
            <column name="event_type" type="VARCHAR(20)"/>
            <column name="event_time" type="TIMESTAMP"/>
            <column name="source" type="VARCHAR(50)"/>
        </createTable>
    </changeSet>
</databaseChangeLog>
